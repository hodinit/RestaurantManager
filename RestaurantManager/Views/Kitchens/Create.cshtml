@model RestaurantManager.Models.Kitchen

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Kitchen</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Temperature" class="control-label"></label>
                <input asp-for="Temperature" class="form-control" />
                <span asp-validation-for="Temperature" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Setting" class="control-label"></label>
                <select asp-for="Setting" class="form-control">
                    <option value="">Select</option>
                    <option value="indoors">indoors</option>
                    <option value="outdoors">outdoors</option>
                </select>
                <span asp-validation-for="Setting" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChefID" class="control-label">Head Chef</label>
                <select asp-for="ChefID" class ="form-control" asp-items="ViewBag.ChefID"></select>
            </div>
            <div class="form-group">
                <label asp-for="UtensilID" class="control-label">Main Utensil</label>
                <select asp-for="UtensilID" class ="form-control" asp-items="ViewBag.UtensilID"></select>
            </div>
            <div class="form-group">
                <label asp-for="LocationID" class="control-label">Location</label>
                <select asp-for="LocationID" class="form-control" asp-items="ViewBag.LocationID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
